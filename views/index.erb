<div class="row">
  <div class="col-sm-3">
    <div class="card">
      <% if @user != nil %>
      <h4>Welcome back: <%= @user.user_name %></h4>

      <% else %>
      <h4>Login:</h4>
      <form class="" action="/login" method="get">
        <div class="form-group">
          <label for="user_name">User Name:</label>
          <input class="form-control" type="text" name="user_name">
        </div>
        <div class="form-group">
          <label for="user_password">Password:</label>
          <input class="form-control" type="password" name="user_password">
        </div>
        <button class="btn btn-success" type="submit" name="button">Log In</button>
      </form>
      <br>
      <small><a href="/sign_up">Not registered? Sign up here.</a></small>
      <% end %>
    </div>
  </div>
  <div class="col-sm-3">
    <div class="card">
      <h4>Local Courts:</h4>
      <% if @courts != nil %>
        <% @courts.each do |court| %>
          <a href="/court/<%= court.id %>"><%= court.title %></a>
        <% end %>
      <% else %>
        <option>There Are No Courts Yet</option>
      <% end %>
    </div>
  </div>
  <div class="col-sm-6">
    <div id="floating-panel">
      <input id="address" type="textbox" value="Portland, Or">
      <input id="submit" type="button" value="Create Court Location">
    </div>
      <div class="card">
        <div id="map"></div>
      </div>
    </div>
</div>
<br>
<% if @user != nil %>
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <% if @games != nil %>
          <h4>Available Games:</h4>
          <ul>
            <% @games.each do |game| %>
              <% court = Court.find(game.court_id) %>
              <li><%= court.title %> <%= game.time %></li>
            <% end %>
          </ul>
        <% else %>
          <h4>No Available Games Yet</h4>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <h4>Create Game:</h4>
        <form class="" action="/create_game" method="post">
          <div class="form-group">
            <label for="time">Court:</label>
            <select class="form-control" name="court">
              <% if @courts != nil %>
                <% @courts.each do |court| %>
                  <option value="<%= court.id %>"><%= court.title %></option>
                <% end %>
              <% else %>
                <option>There Are No Courts Yet</option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="time">Day and Time:</label>
            <input class="form-control" type="datetime-local" name="time">
          </div>
          <button class="btn btn-success" type="submit" name="button">Create Game</button>
        </form>
      </div>
    </div>
  </div>
<% end %>
